<div class="search-bar">
  <h1 class="logged_in_brand_message">Gallery.io</h1>
  <h1 class="logged_in_brand_description">A Digital Museum</h1>
<h1 class="logged_in_welcome_message">Welcome back, <%= @current_user.name %></h1>


<% if flash[:error] %>
  <%= flash[:error] %>
<% end %>

<h2>Search and explore from the options below</h2>
<%= form_tag("/user_search", method: "post") do %>
  <%= label_tag(:q, "") %>
  <%= text_field_tag(:q) %>

  <%= select_tag :search_id, options_from_collection_for_select(Search.all, :id, :name, params[:search_id]) %>

<%= submit_tag("Search") %>
<% end %>
</div>