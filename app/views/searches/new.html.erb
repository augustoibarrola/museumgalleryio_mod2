<h1>Welcome to the Cooper Hewitt Collection Searcher!</h1>

<% if flash[:error] %>
  <%= flash[:error] %>
<% end %>

<h3>Please enter a request by the options below</h3>
<%= form_tag("/search", method: "post") do %>
  <%= label_tag(:q, "") %>
  <%= text_field_tag(:q) %>

  <%= select_tag :search_id, options_from_collection_for_select(Search.all, :id, :name, params[:search_id]) %>

  <%= submit_tag("Search") %>
<% end %>