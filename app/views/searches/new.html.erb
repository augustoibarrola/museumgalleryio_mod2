<div class="search_bar">
  <h1 class="welcome_message">Welcome to</h1>
  <h1 class="brand_message">Gallery.io</h1>
  <h1 class="brand_description">A Digital Museum</h1>

  <% if flash[:error] %>
    <%= flash[:error] %>
  <% end %>

  <h2>Search Our Collection</h2>


  <%= form_tag("/search", method: "post") do %>
    <%= label_tag(:q, "") %>
    <%= text_field_tag(:q) %>
    <%= select_tag :search_id, options_from_collection_for_select(Search.all, :id, :name, params[:search_id]) %><br>
    <br>
    <%= submit_tag("Search") %>
  <% end %>
</div>
