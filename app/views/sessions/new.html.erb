<div class="logincontainer">
    <h1>Login Form</h1>

    <% if flash[:error] %>
        <%= flash[:error] %>
    <% end %>

    <%= form_for :session, url: login_path do |s| %>
        <div class="loginlabel"><%= s.label :email %></div>
        <%= s.text_field :email %><br>
        <br>
        <div class="loginlabel"><%= s.label :password %></div>
        <%= s.password_field :password %><br>
        <br>
        <%= s.submit %>
    <% end %>
</div>
