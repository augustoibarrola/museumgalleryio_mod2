<!DOCTYPE html>
<html>
  <head>
    <title>Gallerydotio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= button_to "Log In", new_login_path, method: :get %><br>
  <%= button_to "Sign Up", new_user_path, method: :get %><br>
  <%= button_to "Log Out", logout_path, method: :delete %>
  <%#= button_to "Log in with Facebook!", auth_facebook_callback_path, method: :get %>
  <%= link_to('Log in with Facebook!', '/auth/facebook')  %>

  <br>
  <hr>
    <%= yield %>
  </body>
</html>
